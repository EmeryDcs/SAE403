<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {# {{ encore_entry_link_tags('app') }} #}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <img src="{{asset('img/png/logo.png')}}" alt="Logo Portfolio">

            <div class="menuMobile">
                <img src="{{asset('img/png/menuMobile.png')}}" alt="Menu Mobile" id="menuMobile">
                <img src="{{asset('img/png/croixMenuMobile.png')}}" alt="Menu Mobile" id="croixMenuMobile">
            </div>
            <nav id="navMenu" class="navMobile">
                <a href="{{path('portfolioall')}}">Portfolio</a>
                {% if not app.user %}
                    <a href="{{path('app_register')}}">S'inscrire</a>
                    <a href="{{path('app_login')}}">Se connecter</a>
                {% endif %}
            </nav>
            <nav class="navDesktop">
                <a href="{{path('portfolioall')}}">Portfolio</a>
                {% if not app.user %}
                    <a href="{{path('app_register')}}">S'inscrire</a>
                    <a href="{{path('app_login')}}">Se connecter</a>
                {% endif %}
            </nav>
        </header>
        {% block body %}{% endblock %}
        <script src="{{ asset('js/portfolio.js') }}"/>
    </body>
</html>
